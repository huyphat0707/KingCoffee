<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.ThucDonActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bgr3"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:background="@drawable/rounded_red_edittext"
                android:id="@+id/spinnerMenu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                />


            <ImageView
                android:id="@+id/imgTheloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:padding="8dp"
                android:textStyle="bold" />

        </LinearLayout>
        <EditText
            android:background="@drawable/rounded_red_edittext"
            android:padding="8dp"
            android:id="@+id/TenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:hint="Tên món"
            android:layout_marginTop="10dp"/>

        <EditText
            android:background="@drawable/rounded_red_edittext"
            android:padding="8dp"
            android:textSize="20dp"
            android:id="@+id/GiaBan"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Gía bán" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:onClick="addmenu"
                android:id="@+id/BtnAddMenu"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textColor="#fff"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                />
            <Button
                android:onClick="HuyMenu"
                android:id="@+id/BtnHuyMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hủy"
                android:background="@drawable/button"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>