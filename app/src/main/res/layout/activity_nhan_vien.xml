<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NhanVienActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imagehinh"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/nhanvien" />
       </RelativeLayout>
        <EditText
            android:id="@+id/manhanvienadd"
            android:layout_width="match_parent"
            android:hint="Mã nhân viên"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/tennhanvienadd"
            android:layout_width="match_parent"
            android:hint="Tên nhân viên"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/sogionhanvienadd"
            android:layout_width="match_parent"
            android:hint="Số giờ làm việc"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/sotiennhanvienadd"
            android:layout_width="match_parent"
            android:hint="Số tiền/h"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:onClick="addnhanvien"
                android:id="@+id/addnhanvienadd"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:text="add"
                android:background="@drawable/button"
                android:layout_height="wrap_content"
                tools:ignore="OnClick" />
            <Button
                android:onClick="huynhanvien"
                android:id="@+id/huynhanvienhadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:background="@drawable/button"
                android:text="cancel"
                android:layout_weight="1"
                tools:ignore="OnClick" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>